@{
    ViewData["Title"] = "Reset password";
    ViewData["Message"] = "Check your email to reset your password.";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<!-- Nav tabs -->
<ul class="nav nav-tabs">
    <li><a asp-area="" asp-controller="Account" asp-action="Login">Sign in</a></li>
    <li><a asp-area="" asp-controller="Account" asp-action="Register">Sign up</a></li>
    <li class="active"><a href="javascript:;">Reset password</a></li>
</ul>
<!-- Tab panes -->
<div class="tab-content">
    <div class="tab-pane active">
        <div class="row">
            <div class="col-sm-3"></div>
            <div class="col-sm-9">
                <p>
                    A link and instructions to reset your password have been sent to the email address associated with your account.
                </p>
            </div>
        </div>
    </div>
</div>
