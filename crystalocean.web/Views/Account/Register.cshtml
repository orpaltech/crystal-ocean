@model RegisterViewModel
@{
    ViewData["Title"] = "Sign up";
    ViewData["Message"] = "Create a new account.";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<!-- Nav tabs -->
<ul class="nav nav-tabs">
    <li><a asp-area="" asp-controller="Account" asp-action="Login">Sign in</a></li>
    <li class="active"><a href="javascript:;">Sign up</a></li>
</ul>
<!-- Tab panes -->
<div class="tab-content">
    <div class="tab-pane"></div>
    <div class="tab-pane active">
        <form asp-route-returnUrl="@ViewData["ReturnUrl"] role="form" class="form-horizontal" method="post">
            <div class="form-group">
                <label asp-for="Prefix" class="col-sm-3 control-label">Name</label>
                <div class="col-sm-9">
                    <div class="row">
                        <div class="col-md-2" style="padding-right: 0;">
                            <select asp-for="Prefix" class="form-control">
                                <option>--</option>
                                <option data-gender="male">Mr.</option>
                                <option data-gender="female">Ms.</option>
                                <option data-gender="female">Mrs.</option>
                            </select>
                            <input asp-for="Gender" type="hidden" />
                        </div>
                        <div class="col-md-5" style="padding-right: 0;">
                            <input asp-for="FirstName" type="text" class="form-control" placeholder="First name">
                        </div>
                        <div class="col-md-5">
                            <input asp-for="LastName" type="text" class="form-control" id="last-name" placeholder="Last name">
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="col-sm-3 control-label">Email</label>
                <div class="col-sm-9">
                    <input asp-for="Email" class="form-control" placeholder="Email"><span 
                        asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label for="mobile" class="col-sm-3 control-label">Mobile Phone</label>
                <div class="col-sm-9">
                    <input type="tel" class="form-control" id="mobile" placeholder="Mobile Phone">
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="col-sm-3 control-label">Password</label>
                <div class="col-sm-9">
                    <input asp-for="Password" type="password" class="form-control" placeholder="Password"><span 
                        asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="col-sm-3 control-label">Confirm password</label>
                <div class="col-sm-9">
                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password"><span 
                        asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="row" style="clear: right;">
                <div class="col-sm-3"></div>
                <div class="col-sm-9">
                    <button type="submit" class="btn btn-primary">Save &amp; Continue</button>
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-default">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>